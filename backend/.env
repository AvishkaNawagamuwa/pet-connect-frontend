# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
# For local development without MongoDB, we'll use a mock database
MONGODB_URI=mongodb://localhost:27017/petconnect
# Alternative: Use MongoDB Atlas cloud database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/petconnect

# JWT Configuration
JWT_SECRET=petconnect-super-secret-jwt-key-development-only-change-in-production-2024
JWT_EXPIRE=7d

# OpenAI Configuration 
# To get truly dynamic AI responses, add your OpenAI API key here:
# OPENAI_API_KEY=sk-your-openai-api-key-here
# Get your API key from: https://platform.openai.com/api-keys
# If no key is provided, the system will use intelligent fallback responses

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=5

# AI Chat Configuration
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=300
AI_TEMPERATURE=0.7